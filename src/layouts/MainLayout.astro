---
import "@/main.css"
export interface Props {
  title?: string;
}
const { title = 'Astro' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="font-sans bg-gray-50">
    <slot />
  </body>
</html>